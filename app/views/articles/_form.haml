= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  %button{:type => "button", :"data-select_file" => "true"}
    Select File
  = image_preview(@article, :image)
  #tagbox
    =render :partial => "tagboxes/field"


  =link_to "Add Subtitle", "", html_option = {:id => "add_subtitle_field"}


  .actions
    = f.submit

  %iframe{:id => "forupload", :src => Rails.root + "/images/new",:"data-iframe_for_upload" => "true"}
