-number = 0
=fields_for @article do |f|
  = f.fields_for :tagboxes do |tagbox|
    = tagbox.fields_for :subtitles do |subtitle|
      .fields
        = subtitle.label :text, "Subtitle " + (number + 1).to_s
        - number = number + 1
        = subtitle.text_area(:text, :rows => 3)
        = link_to "remove", "/", html_option = {:id => "remove_field_id_#{number}", :class => "remove_subtitle_field"}

